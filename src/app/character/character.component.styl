@require 'vars.styl'

:host
  background-color clr-grey
  background-repeat no-repeat
  background-size cover
  box-sizing border-box
  color #fff
  display flex
  flex-direction column
  height 75px
  max-width 380px
  width 100%

.character-info
  align-items center
  box-sizing border-box
  color #fff
  display flex
  flex 1
  justify-content space-between
  line-height 1
  padding 9px 15px 9px 80px
  position relative
  text-shadow 0 1px .1px rgba(#000, .8)
  width 100%
  > *
    display flex
    flex-direction column
    height 100%
    justify-content space-between
    &:last-child
      align-items flex-end
  .emblem-icon
    border-radius 4px
    height 59px
    left 8px
    overflow hidden
    position absolute
    top 8px
  .class,
  .name
    font-size 1.6em
    font-weight 500
  .race-gender,
  .small-class
    opacity .7
  .light-level
    color clr-secondary
    font-size 2em
    font-weight 500
  .level
    .label
      font-size .8em
    .value
      font-size 1.2em
      font-weight 500
    .level-cap
      font-size .8em
      opacity .5

.level-progress-bar
  background rgba(#fff, .4)
  display flex
  height 12px
  width 100%
  .progress
    background #fff
    border-radius 0 5px 5px 0
    box-shadow 0 0 10px 0 clr-secondary
    display flex
    height 100%
    transition all transition-time
