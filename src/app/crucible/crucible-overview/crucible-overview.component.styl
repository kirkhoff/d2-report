@require 'vars.styl'

:host
  margin-top 1em
.loading
  margin-top 3em
header
  align-items center
  display flex
  justify-content space-between
  .avg-kd
    color clr-grey
    text-transform uppercase
    .sm
      color lighten(clr-grey, 50%)
      margin-right 1em
h3
  color clr-tertiary
  font-size 1.5em
  font-weight 700
  margin 1em 0
section
  margin-top 1em
  &:first-child
    margin-top 0
h4
  background clr-secondary
  color clr-grey
  font-size 1.25em
  font-weight 700
  margin-bottom 1em
  padding-bottom 1em
  padding-top 1em
.guardian-stats
  width 100%
  tr:first-child
    background lighten(clr-grey, 80%)
  th,
  td
    padding 10px
    text-align left
    vertical-align middle
  tr:nth-child(2n+3)
    background lighten(clr-secondary, 90%)
.label
  color clr-grey
  font-size .8em
  text-transform uppercase
  &:after
    content ': '
    margin-right 1.5em
