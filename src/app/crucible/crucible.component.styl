@require 'grid.styl'

:host
  display block
  width 100%
.sub-nav
  background lighten(clr-grey, 5%)
  height 3em
  .container
    align-items center
    display flex
    height 100%
    justify-content flex-start
  a
    align-items center
    color clr-white
    display flex
    font-size .8em
    font-weight 700
    height 100%
    line-height 1
    padding 0 10px
    text-decoration none
    text-transform uppercase
    &.active
      background rgba(clr-secondary, 20%)
.crucible-header
  background clr-primary
  justify-content center
  padding 2em 0
  .container
    align-items center
    display flex
    justify-content space-between
  h2
    color clr-white
    font-size 3em
    line-height 1
  form
    color clr-white
    mat-form-field
      margin-bottom -1.25em
      min-width 250px

+mobile-only()
  .crucible-header
    .container
      flex-direction column
      justify-content center
    h2
      margin-bottom .5em
