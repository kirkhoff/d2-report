@require 'vars.styl'

:host
  display block
.crucible-header
  background clr-primary
  justify-content center
  padding 2em 0
  .container
    align-items center
    display flex
    justify-content space-between
  h2
    color clr-white
    font-size 3em
    line-height 1
  form
    color clr-white
    mat-form-field
      margin-bottom -1.25em
      min-width 250px

.player
  margin-top 1em
  h3
    color clr-tertiary
    font-size 1.5em
    font-weight 700
    margin 1em 0
  .label
    color clr-grey
    font-size .8em
    text-transform uppercase
    &:after
      content ': '
      margin-right 1.5em

+mobile-only()
  .crucible-header
    .container
      flex-direction column
      justify-content center
    h2
      margin-bottom .5em
