@require 'grid.styl'

:host
  box-sizing border-box
  display block
  padding 1em 0
header.searched-player
  align-items center
  display flex
  justify-content flex-start
  h3
    color clr-tertiary
    font-size 1.5em
    font-weight 700
    margin 1em 0
    .sm
      color lighten(clr-grey, 50%)
.guardian
  border-radius 2px
  box-shadow 1px 0 10px 0 rgba(#000, .2)
  box-sizing border-box
  margin-bottom 1em
  overflow hidden
  width 100%
  header
    align-items center
    background clr-secondary
    display flex
    justify-content space-between
    padding 1em
  h4 > a
    color clr-grey !important
    font-size 1.5em
    font-weight 700
    text-decoration none
  .character-info
    sans-font()
    color darken(clr-secondary, 50%)
    font-size .9em
    font-weight 400
    text-transform uppercase
.guardian-stats
  width 100%
  td
    padding 10px
    vertical-align middle
  td:first-child
    text-align left
  td:not(:first-child)
    text-align right
  tr:nth-child(even)
    background lighten(clr-secondary, 90%)
  tr.glory-rank td
    color clr-tertiary
    font-weight 700
.label
  color clr-grey
  font-size .8em
  text-transform uppercase
  &:after
    content ': '
    margin-right 1.5em
.value .sm
  color lighten(clr-grey, 50%)
